    "migrations": "yarn run sequelize db:migrate",
    "migrations:undo": "yarn run sequelize db:migrate:undo",
    "add-migration": "sh scripts/migration-generate.sh",
    "add-seeder": "sh scripts/seeder-generate.sh",
    "seeders": "yarn run sequelize db:seed:all",
    "restartdb": "yarn run dropdb && yarn run createdb && yarn run migrations && yarn run seeders",
    "build-and-migrate": "yarn run build && yarn run migrations",
    "build-and-seed": "yarn run build && yarn run seeders",
    "build-and-restartdb": "yarn run build && yarn run restartdb"
