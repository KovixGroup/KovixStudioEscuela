{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["es6", "dom"]
  },
  "include": [
    "./src"
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
